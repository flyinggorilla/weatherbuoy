###################
# Mandatory overrides for default sdkconfig (idf.py menuconfig)
# This list will be used when creating a new sdkconfig from scratch
#


#
# Flash
#
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"

#
# Partition Table
#
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"


# ESP HTTP client
#
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=y


#
# Bootloader config
#
CONFIG_BOOTLOADER_APP_ROLLBACK_ENABLE=y


#
# ESP-TLS
#
CONFIG_ESP_TLS_INSECURE=y
CONFIG_ESP_TLS_SKIP_SERVER_CERT_VERIFY=y  

#
# PPP
#
CONFIG_LWIP_PPP_SUPPORT=y
CONFIG_LWIP_PPP_NOTIFY_PHASE_SUPPORT=y
# CONFIG_LWIP_PPP_PAP_SUPPORT is not set
# CONFIG_LWIP_PPP_DEBUG_ON=y
# CONFIG_LWIP_PPP_PAP_SUPPORT=y

#
# CPU
#
CONFIG_ESP32_DEFAULT_CPU_FREQ_160=y
CONFIG_ESP32_DEFAULT_CPU_FREQ_MHZ=160


#
# Weatherbuoy
#
CONFIG_WEATHERBUOY_WIFI_STA_SSID=""
CONFIG_WEATHERBUOY_WIFI_STA_PASS=""
CONFIG_WEATHERBUOY_HOSTNAME="buoyinit"
CONFIG_WEATHERBUOY_WIFI_AP_PASS=""
CONFIG_WEATHERBUOY_SENDDATA_INTERVAL_DAYTIME=10
CONFIG_WEATHERBUOY_SENDDATA_INTERVAL_NIGHTTIME=60
CONFIG_WEATHERBUOY_SENDDATA_INTERVAL_HEALTH=300
CONFIG_WEATHERBUOY_CELLULAR_APN="webapn.at"
CONFIG_WEATHERBUOY_CELLULAR_USER=""
CONFIG_WEATHERBUOY_CELLULAR_PASS=""
CONFIG_WEATHERBUOY_CELLULAR_OPERATOR="A1"
CONFIG_WEATHERBUOY_CELLULAR_NETWORK=51

#
# Cellular
#
# CONFIG_LILYGO_TTGO_TCALL14_SIM800 is not set
CONFIG_LILYGO_TTGO_TPCIE_SIM7600=y
# end of Cellular


